<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    tools:context="com.github.dnvanderwerff.lagrandefinale.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stdev"
        android:id="@+id/stdev"
        android:onClick="startDistance"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Magnetodev"
        android:id="@+id/magnetdev"
        android:layout_below="@+id/stdev"
        android:onClick="startMagneto"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L Shape"
        android:id="@+id/LSHAPE"
        android:onClick="startParticleMapLShape"
        android:layout_below="@id/magnetdev"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9th Floor"
        android:id="@+id/FLOOR9"
        android:onClick="startParticleMapFloor9"
        android:layout_below="@id/LSHAPE"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Measure Accel"
        android:id="@+id/acceleration"
        android:onClick="startAccelMeas"
        android:layout_below="@id/FLOOR9"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set length"
        android:id="@+id/length"
        android:onClick="startLength"
        android:layout_below="@id/acceleration"/>

</RelativeLayout>
